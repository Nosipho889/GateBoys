@model IEnumerable<Gateboys.Models.InventoryProduct>

@{
    ViewBag.Title = "RequestQuotation";
}

<div style="width:100%; height:40px; background-color:#dbdbdb;">
    <h2 class="text-center">Low Stock Products</h2>
</div>
<div class="well">
    <table class="table table-hover">
        <tr style="background-color:#c8c8c8">
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories.categoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catalogues.catalogueName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.quantityOnHand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantityForQuote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unitPrice)
            </th>

            <th></th>
            <th>Request Quote</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.brandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.categoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Catalogues.catalogueName)
                </td>

                <td style="color:darkred">
                    @Html.DisplayFor(modelItem => item.quantityOnHand)
                </td>
                <td style="color:darkred">
                    @Html.DisplayFor(modelItem => item.quantityForQuote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.unitPrice)
                </td>


                <td>
                    @Html.ActionLink("Request Quantity", "Quote", new { id = item.productId }, new { @class = "btn btn-info" })
                </td>
                @if (item == Model.Last())
                {
                    <td>
                        @Html.ActionLink("Email Supplier", "Invoice", new { id = item.productId }, new { @class = "btn btn-info" })
                    </td>
                }
            </tr>
        }

    </table>
</div>
